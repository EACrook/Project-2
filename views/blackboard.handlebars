<h1 class="m-10 text-center text-8xl roast-me">Roast Me</h1>

<hr id="line" class="flex text-center" />

<section class="justify-center m-8 p-4 text-center">
    <h2 class="m-3 text-6xl board-title">Daily Roast:</h2>
    <div class="m-3 text-4xl board-content">{{ insults.insult }}</div>
</section>

{{!-- make two columns here - one for drink menu and one for ingredients --}}
{{!-- pull in drinks from database --}}

<section class="grid grid-cols-2 gap-4">
    <div class="ml-32 justify-center text-center">
        <h2 class="text-6xl board-title">Drink Menu:</h2>
        <ol class="drink-list">
            {{#each drinks}}
            <li>
                <div class="drink">
                    <div class="drink_name">
                        <div>{{drink_name}}</div>
                    </div>
                </div>
            </li>
            {{/each}}
        </ol>
    </div>
</section>



{{!-- Ingredients --}}

<section class="grid grid-cols-2 gap-4" <article class="mr-32 justify-center text-center">
    <h2 class="text-6xl board-title">Ingredients:</h2>
    <ol class="ingredient-list">
        {{#each ingredients}}
        <li>
            <div class="ingredient">
                <div class='ingredient_name'>
                    <div>{{ingredient_name}}</div>
                </div>
            </div>
        </li>
        {{/each}}
    </ol>
</section>
