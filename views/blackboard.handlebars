<a href="/">
    <h1 class="animate__animated animate__backInDown m-10 text-center text-8xl roast-me">Roast Me</h1>
</a>

<hr id="line" class="flex text-center" />

<section class="animate__animated animate__backInUp justify-center m-8 p-4 text-center">
    <h2 class="m-3 text-6xl board-title">Daily Roast:</h2>
    <div class="m-3 text-4xl board-content">{{ insults.insult }}</div>
</section>

{{!-- make two columns here - one for drink menu and one for ingredients --}}
{{!-- pull in drinks from database --}}

<section class="grid grid-cols-2 gap-4">
    <div class="animate__animated animate__backInLeft ml-32 justify-center text-center">
        <h2 class="mb-4 text-6xl board-title">Drink Menu:</h2>
        <ol class="drink-list">
            {{#each drinks}}
            <li>
                <div class="drink">
                    <div class="drink_name">
                        <div class="board-content text-4xl">{{drink_name}}</div>
                    </div>
                </div>
            </li>
            {{/each}}
        </ol>
    </div>

    <div class="animate__animated animate__backInRight mr-32 justify-center text-center">
        <h2 class="mb-4 text-6xl board-title">Ingredients:</h2>
        <ol class="ingredient-list grid grid-cols-4">
            {{#each ingredients}}
            <li>
                <div class="ingredient">
                    <div class='ingredient_name'>
                        <div class="board-content">{{ingredient_name}}</div>
                    </div>
                </div>
            </li>
            {{/each}}
        </ol>
    </div>
</section>

<div>
    <a href="/edit-caption" class="flex justify-center">
        <button class="brew-drink-btn animate__animated animate__backInDown p-6 m-4 rounded-full text-4xl">Brew My Drink</button>
    </a>
</div>



